<div class="col-lg-10 mx-auto">
  <% if @post.cover_image.attached? %>
    <%= image_tag @post.cover_image, class: 'img-fluid' %>
  <% end %>
  
  <h1><%= @post.title %></h1>
  <p class="lead"><%= @post.description %></p>
  <div>
    <%= link_to 'Home', root_path, class:"btn btn-primary mx-2" %>
    <%= link_to 'Edit Post', edit_post_path(@post), class:"btn btn-primary mx-2" %>
    <%= link_to 'Delete Post', post_path(@post), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-primary mx-2" %>
    <%= link_to "Preview and Download", download_post_path(@post, preview: true), class: 'btn btn-primary mx-2' %>
    <%= link_to "Download as PDF", download_post_path(@post), class: 'btn btn-primary mx-2' %>
  </div>
</div>